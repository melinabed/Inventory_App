<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Games in <%= category %></title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('header') %>
    <main>
      <h2><%= categoryName %></h2>
      <div class="games-container">
        <% games.forEach(game => { %>
        <div class="game-card">
          <img src="<%= game.image_path %>" alt="<%= game.name %>" />
          <h3><%= game.name %></h3>
          <p><%= game.developer %></p>
          <p><%= game.publisher %></p>
          <p><%= game.release_date %></p>
          <p><%= game.price %></p>
        </div>
        <% }); %>
      </div>
    </main>
  </body>
</html>
