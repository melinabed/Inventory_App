<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Categories</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('header') %>
    <main>
      <h2>Subgenre</h2>
      <ul class="categories-container">
        <% subgenres.map(subgenre => { %>
        <li class="card">
          <h3><%= subgenre.name %></h3>
        </li>
        <% }); %>
      </ul>
      <h2>Platforms</h2>
      <ul class="categories-container">
        <% platforms.map(platform => { %>
        <li class="card">
          <h3><%= platform.name %></h3>
        </li>
        <% }); %>
      </ul>
      <h2>Game Modes</h2>
      <ul class="categories-container">
        <% gameModes.map(mode => { %>
        <li class="card">
          <h3><%= mode.name %></h3>
        </li>
        <% }); %>
      </ul>
    </main>
  </body>
</html>
